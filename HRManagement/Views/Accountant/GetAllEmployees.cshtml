@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "GetAllEmployees";
    var branchNames = ViewData["BranchNames"] as List<string> ?? new List<string>();
    var totalNetSalary = ViewData["TotalNetSalary"];
}

<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جدول الموظفين</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
        }

        .container {
            width: 90%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
            white-space: nowrap;
        }

        th {
            background: #007bff;
            color: white;
        }

        .btn {
            text-decoration: none;
            color: white;
            background: #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

            .btn:hover {
                background: #c82333;
            }

        .filter-form {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        input[type="number"], select {
            padding: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
            width: 150px;
        }

        tfoot td {
            font-weight: bold;
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <h1>جدول الموظفين</h1>

    <div class="container">
        <form method="get" asp-action="GetAllEmployees" class="filter-form">
            <select name="BranchName">
                <option value="">كل الفروع</option>
                @foreach (var branch in branchNames)
                {
                    <option value="@branch">@branch</option>
                }
            </select>
            <button type="submit" class="btn">تطبيق الفلتر</button>
        </form>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>الاسم</th>
                    <th>اسم الفرع</th>
                    <th>الدور</th>
                    <th>اسم البنك</th>
                    <th>حساب البنك</th>
                    <th>الشهر</th>
                    <th>السنة</th>
                    <th>عدد الساعات</th>
                    <th>عدد ساعات العمل الإضافي</th>
                    <th>الراتب بالساعة</th>
                    <th>إجمالي الراتب</th>
                    <th>صافي المرتب</th>
                    <th>مجموع المرتبات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.BranchName</td>
                        <td>@employee.Role</td>
                        <td>@employee.BankName</td>
                        <td>@employee.BankAccount</td>
                        <td>@employee.Month</td>
                        <td>@employee.Year</td>
                        <td>@employee.Hours</td>
                        <td>@employee.HoursOverTime</td>
                        <td>@employee.SalaryPerHour</td>
                        <td>@employee.TotalSalary</td>
                        <td>@Math.Round((double)employee.NetSalary, 2).ToString("F2")</td>
                        <td></td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="13">إجمالي المرتبات:</td>
                    <td>@totalNetSalary</td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>
