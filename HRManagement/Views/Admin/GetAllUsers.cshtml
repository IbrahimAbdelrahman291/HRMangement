@model IEnumerable<User>
@{
    ViewData["Title"] = "GetAllUsers";
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>GetAllUsers</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            direction: rtl;
            padding: 30px;
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .search-form {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            flex-grow: 1;
        }

            .search-form input {
                width: 300px;
            }

        .back-button {
            white-space: nowrap;
            padding: 5px 12px;
            font-size: 14px;
            height: fit-content;
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
        }

        .table th {
            background-color: #343a40;
            color: white;
        }

        .table-container {
            overflow-x: auto;
        }

        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
        }
    </style>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">@ViewBag.Message</div>
        <script>
            window.onload = function () {
                var messageBox = document.getElementById('message-box');
                if (messageBox) {
                    setTimeout(function () {
                        messageBox.style.display = 'none';

                        // بعد إخفاء الرسالة، ابعت الـ fetch لتمسحها
                        fetch('/RemoveMessageController/ClearMessage', { method: 'POST' });
                    }, 5000);
                }
            };
        </script>
    }
    <div class="top-bar">
        <a asp-action="Index" class="btn btn-primary back-button">رجوع</a>

        <form asp-action="GetAllUsers" method="get" class="search-form">
            <input type="text" name="userName" class="form-control" placeholder="ابحث باسم المستخدم" />
            <button type="submit" class="btn btn-secondary">بحث</button>
        </form>
    </div>

    <div class="table-container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>اسم المستخدم</th>
                    <th>تعديل كلمة السر</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <a asp-action="ResetPassword" asp-route-userName="@user.UserName" class="btn btn-warning">تعديل كلمة السر</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>