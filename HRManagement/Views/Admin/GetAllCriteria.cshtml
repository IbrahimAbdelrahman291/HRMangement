@model List<EvaluationCriteria>
@{
    ViewData["Title"] = "GetAllCriteria";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
            direction: rtl;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        .button-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn {
            background-color: #28a745;
            color: white;
            padding: 10px 18px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            margin: 0 8px;
        }

        .btn-back {
            background-color: #6c757d; /* رمادي */
        }

        table {
            width: 60%;
            margin: auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
            text-align: right;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .empty-message {
            text-align: center;
            color: #777;
            margin-top: 40px;
        }

        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
        }
    </style>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">@ViewBag.Message</div>
        <script>
            window.onload = function () {
                var messageBox = document.getElementById('message-box');
                if (messageBox) {
                    setTimeout(function () {
                        messageBox.style.display = 'none';

                        // بعد إخفاء الرسالة، ابعت الـ fetch لتمسحها
                        fetch('/RemoveMessageController/ClearMessage', { method: 'POST' });
                    }, 5000);
                }
            };
        </script>
    }
    <h1>بنود التقييم</h1>

    <div class="button-container">
        <a class="btn" asp-action="AddCriteria">إضافة بند</a>
        <a class="btn btn-back" asp-action="Index">رجوع</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>رقم البند</th>
                <th>اسم البند</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>