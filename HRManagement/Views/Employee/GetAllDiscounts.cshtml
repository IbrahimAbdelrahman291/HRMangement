@model IEnumerable<DiscountViewModel>
@{
    ViewData["Title"] = "GetAllDiscounts";
    TempData.Keep("EmployeeId");
    var message = ViewBag.Message;
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>عرض الخصومات</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        .container {
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            width: 90%;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 1rem;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .filter-section {
            margin-bottom: 20px;
        }

        .filter-input {
            padding: 5px;
            font-size: 1rem;
            margin: 0 10px;
            width: 150px;
            box-sizing: border-box;
        }

        .back-btn {
            margin-bottom: 20px;
            display: inline-block;
        }

        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
            z-index: 9999;
        }
    </style>
    <script>
        window.onload = function () {
            const messageBox = document.getElementById("message-box");
            if (messageBox) {
                setTimeout(() => {
                    messageBox.style.opacity = "0";
                    setTimeout(() => messageBox.remove(), 500);
                }, 5000);
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <div class="top-bar">
            <a asp-action="MyData" asp-route-employeeId="@TempData["EmployeeId"]" class="btn back-btn">رجوع</a>
        </div>

        @if (ViewBag.Message != null)
        {
            <div id="message-box" class="message-box">
                @message
            </div>
            ViewBag.Message = null;
        }
        <!-- فلترة حسب الشهر والسنة -->
        <form method="get" asp-action="GetAllDiscounts">
            <div class="filter-section">
                <input type="hidden" name="employeeId" value="@TempData["EmployeeId"]" />
                <input type="number" name="month" class="filter-input" min="1" max="12" placeholder="الشهر" />

                <input type="number" name="year" class="filter-input" placeholder="السنه" />

                <button type="submit" class="btn">تطبيق الفلتر</button>
            </div>
        </form>

        <table>
            <thead>
                <tr>
                    <th>الرقم التعريفي</th>
                    <th>التاريخ</th>
                    <th>المبلغ</th>
                    <th>السبب</th>
                    <th>ملاحظات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discount in Model)
                {
                    <tr>
                        <td>@discount.Id</td>
                        <td>@discount.Date.ToString("yyyy-MM-dd")</td>
                        <td>@discount.Amount</td>
                        <td>@discount.ReasonOfDiscount</td>
                        <td>@discount.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>