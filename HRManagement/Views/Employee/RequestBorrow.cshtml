@model RequestBorrowViewModel
@{
    ViewData["Title"] = "RequestBorrow";
    int employeeId = (int)TempData["EmployeeId"];
    TempData["EmployeeId"] = employeeId;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin-top: 15px;
            color: #555;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            width: 100%;
            padding-left: 20px;
            padding-right: 20px;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .back-btn {
            display: inline-block;
            padding: 8px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

            .back-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h1>طلب سلفه</h1>

        <form asp-action="RequestBorrow" method="post">
            <input type="hidden" name="EmployeeId" value="@employeeId" />
            <label for="Amount">المبلغ:</label>
            <input type="number" id="Amount" name="Amount" required />

            <label for="RequestDate">تاريخ الطلب:</label>
            <input type="date" id="RequestDate" name="RequestDate" required />

            <label for="Reason">سبب السلفه:</label>
            <textarea id="Reason" name="Reason" rows="4" placeholder="أدخل سبب السلفه هنا..." required></textarea>

            <button type="submit" class="btn">تقديم</button>
        </form>

        <a asp-action="GetAllRequestBorrows" asp-route-employeeId="@employeeId" class="back-btn">رجوع</a>
    </div>
</body>
</html>