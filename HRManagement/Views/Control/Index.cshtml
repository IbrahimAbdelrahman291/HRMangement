@{
    ViewData["Title"] = "Index";
}
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة التحكم</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            position: relative;
        }

        .logout-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
            font-size: 14px;
        }

            .logout-btn:hover {
                background-color: #0056b3;
            }

        .instructions-box {
            position: relative;
            margin: 20px auto;
            padding: 15px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: left;
            width: 80%;
            max-width: 600px;
        }

        .notification {
            position: fixed;
            top: 80px;
            right: 20px;
            background-color: #28a745;
            color: white;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            display: none;
        }

        .container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .card {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 250px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: scale(1.05);
            }

            .card h2 {
                color: #333;
            }

            .card a {
                display: block;
                text-decoration: none;
                color: white;
                background: #007bff;
                padding: 10px;
                border-radius: 5px;
                margin-top: 15px;
            }

                .card a:hover {
                    background: #0056b3;
                }

        .logo {
            width: 100px;
            height: auto;
            margin: 20px auto;
            display: block;
        }
    </style>
</head>
<body>
    <form asp-action="Logout" asp-controller="Auth" method="post">
        <button type="submit" class="logout-btn">تسجيل الخروج</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">@ViewBag.Message</div>
        ViewBag.Message = null;
    }

    <img src="/images/logoHR.png" alt="Logo" class="logo">


    <h1>لوحة التحكم</h1>

    <div class="container">
        <div class="card">
            <h2>تقرير الحضور والانصراف</h2>
            <p>عرض جميع عمليات الحضور والانصراف المكتمله والمنسيه</p>
            <a asp-action="GetAttendanceReport">عرض التقرير</a>
        </div>
    </div>

    <footer style="margin-top: 50px; text-align: center; padding: 15px; background-color: #f4f4f4; color: #555; font-size: 14px;">
        © Copyright
        <a href="https://opshan.github.io/home" target="_blank" style="color: #007bff; text-decoration: none;">
            Opshan
        </a>
    </footer>
</body>
</html>