@model IEnumerable<DiscountViewModel>
@{
    ViewData["Title"] = "الخصومات";
    TempData.Keep("EmployeeId");
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma;
            background-color: #f4f4f4;
            direction: rtl;
            padding: 30px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
            text-align: right;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .no-data {
            text-align: center;
            color: #888;
            margin-top: 20px;
        }

        .btn-back {
            display: block;
            width: fit-content;
            margin: 30px auto;
            padding: 10px 20px;
            background-color: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 6px;
            text-align: center;
        }

            .btn-back:hover {
                background-color: #5a6268;
            }
    </style>
</head>
<body>

    <h1>الخصومات</h1>

    
        <table>
            <thead>
                <tr>
                    <th>المبلغ</th>
                    <th>السبب</th>
                    <th>التاريخ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var discount in Model)
                {
                    <tr>
                        <td>@discount.Amount</td>
                        <td>@discount.ReasonOfDiscount</td>
                        <td>@discount.Date</td>
                    </tr>
                }
            </tbody>
        </table>

    <a asp-action="GetEmployeeHistoryById" asp-route-id="@TempData["EmployeeId"]" class="btn-back">رجوع</a>

</body>
</html>