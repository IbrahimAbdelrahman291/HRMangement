@model EmployeeViewModel
@{
    ViewData["Title"] = "Update Employee";
    TempData.Keep("FilterBranch");
}

<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعديل بيانات الموظف</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            direction: rtl;
        }

        .container {
            width: 50%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        label {
            display: block;
            margin-top: 10px;
            text-align: right;
        }

        input, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        button {
            padding: 10px 20px;
            margin-top: 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary-link {
            background-color: #007bff;
            color: white;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
        }

            .btn-secondary-link:hover {
                background-color: #0056b3;
            }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .back-link-container {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">تعديل بيانات الموظف</h1>

    <div class="container">
        <form asp-action="UpdateEmployee" method="post" asp-route-branch="@TempData["FilterBranch"]">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="Month" value="@Model.Month" />
            <input type="hidden" name="Year" value="@Model.Year" />

            <label>اسم الموظف:</label>
            <input type="text" asp-for="Name"  required />

            <label>اسم الفرع:</label>
            <input type="text" asp-for="BranchName"  required />

            <label>الدور الوظيفي:</label>
            <input type="text" asp-for="Role"  required />

            <label>اسم البنك:</label>
            <input type="text" asp-for="BankName"  />

            <label>رقم الحساب البنكي:</label>
            <input type="text" asp-for="BankAccount"  />

            <label>عدد الساعات:</label>
            <input type="number" asp-for="Hours"  step="0.01" min="0"/>

            <label>ساعات إضافية:</label>
            <input type="number" asp-for="HoursOverTime"  step="0.01" />

            <label>ساعات منسيه:</label>
            <input type="number" asp-for="ForgetedHours"  step="0.01" />

            <label>التارجت:</label>
            <input type="number" asp-for="Target"  step="0.01" />

            <label>اجمالي الخصومات:</label>
            <input type="number" asp-for="TotalDiscounts"  step="0.01" />

            <label>اجمالي السلف:</label>
            <input type="number" asp-for="TotalBorrows"  step="0.01" />
            
            <label>اجمالي الزيادات:</label>
            <input type="number" asp-for="TotalBonuss"  step="0.01" />

            <label>الراتب لكل ساعة:</label>
            <input type="number" asp-for="SalaryPerHour"  step="0.01" />

            <label>إجمالي الراتب:</label>
            <input type="number" asp-for="TotalSalary"  step="0.01" />

            <label>صافي المرتب:</label>
            <input type="number" asp-for="NetSalary"  step="0.01" />

            <div class="buttons">
                <button type="submit" class="btn btn-primary">حفظ التعديل</button>
            </div>
        </form>

        <div class="back-link-container">
            <a asp-action="GetAllEmployees" asp-route-month="@Model.Month" asp-route-year="@Model.Year" asp-route-BranchName="@TempData["FilterBranch"]" class="btn-secondary-link">
                رجوع
            </a>
        </div>
    </div>
</body>
</html>