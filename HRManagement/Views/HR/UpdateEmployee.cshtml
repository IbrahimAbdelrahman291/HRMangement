@model EmployeeViewModel
@{
    ViewData["Title"] = "Update Employee";
}

<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تعديل بيانات الموظف</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            direction: rtl;
        }

        .container {
            width: 50%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        label {
            display: block;
            margin-top: 10px;
            text-align: right;
        }

        input, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        button {
            padding: 10px 20px;
            margin-top: 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            margin-right: 10px;
        }

        .buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">تعديل بيانات الموظف</h1>

    <div class="container">
        <form asp-action="UpdateEmployee" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="Month" value="@Model.Month" />
            <input type="hidden" name="Year" value="@Model.Year" />

            <label>اسم الموظف:</label>
            <input type="text" name="Name" value="@Model.Name" required />

            <label>اسم الفرع:</label>
            <input type="text" name="BranchName" value="@Model.BranchName" required />

            <label>الدور الوظيفي:</label>
            <input type="text" name="Role" value="@Model.Role" required />

            <label>اسم البنك:</label>
            <input type="text" name="BankName" value="@Model.BankName" />

            <label>رقم الحساب البنكي:</label>
            <input type="text" name="BankAccount" value="@Model.BankAccount" />

            <label>عدد الساعات:</label>
            <input type="number" name="Hours" value="@Model.Hours" step="0.01" />

            <label>ساعات إضافية:</label>
            <input type="number" name="HoursOverTime" value="@Model.HoursOverTime" step="0.01" />

            <label>الراتب لكل ساعة:</label>
            <input type="number" name="SalaryPerHour" value="@Model.SalaryPerHour" step="0.01" />

            <label>إجمالي الراتب:</label>
            <input type="number" name="TotalSalary" value="@Model.TotalSalary" step="0.01" />

            <label>صافي المرتب:</label>
            <input type="number" name="NetSalary" value="@Model.NetSalary" step="0.01" />

            <div class="buttons">
                <button type="submit" class="btn btn-primary">حفظ التعديل</button>
            </div>
        </form>
        <a asp-action="GetAllEmployees" asp-route-month="@Model.Month" asp-route-year="@Model.Year" class="btn btn-secondary">
            رجوع
        </a>
    </div>
</body>
</html>