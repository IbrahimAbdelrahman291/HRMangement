@model List<Employee>
@{
    ViewData["Title"] = "GetAllEmployeeHistories";
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Tahoma, sans-serif;
            background-color: #f5f5f5;
            direction: rtl;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .search-container {
            text-align: center;
            margin-bottom: 20px;
        }

            .search-container input {
                padding: 8px;
                margin: 0 5px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .search-container button, .btn-back {
                padding: 8px 16px;
                border: none;
                border-radius: 5px;
                font-size: 14px;
                cursor: pointer;
            }

        .btn-search {
            background-color: #007bff;
            color: white;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            margin-right: 10px;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        .btn-view, .btn-create {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            color: white;
            font-size: 14px;
        }

        .btn-view {
            background-color: #28a745;
        }

        .btn-create {
            background-color: #ffc107;
        }

        .no-results {
            text-align: center;
            color: #777;
            margin-top: 20px;
        }

        .message-box {
            position: fixed;
            top: 100px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #28a745;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            margin: 10px auto;
            width: fit-content;
            transition: opacity 0.5s;
            opacity: 1;
        }
    </style>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">@ViewBag.Message</div>
        <script>
            window.onload = function () {
                var messageBox = document.getElementById('message-box');
                if (messageBox) {
                    setTimeout(function () {
                        messageBox.style.display = 'none';

                        // بعد إخفاء الرسالة، ابعت الـ fetch لتمسحها
                        fetch('/RemoveMessageController/ClearMessage', { method: 'POST' });
                    }, 5000);
                }
            };
        </script>
    }
    <h1>سجل الموظفين</h1>

    <div class="search-container">
        <form asp-action="GetAllEmployeeHistories" method="get" style="display:inline-block;">
            <input type="text" name="searchName" placeholder="اسم الموظف" />
            <input type="text" name="searchId" placeholder="ID الموظف" />
            <button type="submit" class="btn-search">بحث</button>
        </form>
        <a class="btn-back" asp-action="Index">رجوع</a>
    </div>

        <table>
            <thead>
                <tr>
                    <th>رقم الموظف</th>
                    <th>اسم الموظف</th>
                    <th>عرض السجل</th>
                    <th>إنشاء ملف</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn-view" asp-action="GetEmployeeHistoryById" asp-route-id="@item.Id">عرض</a>
                        </td>
                        <td>
                            <a class="btn-create" asp-action="CreateEmployeeHistory" asp-route-id="@item.Id">إنشاء ملف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</body>
</html>