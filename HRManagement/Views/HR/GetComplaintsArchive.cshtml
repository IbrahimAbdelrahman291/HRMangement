@model IEnumerable<ComplaintsViewModle>
@{
    ViewData["Title"] = "GetAllComplaints";
}
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <title>طلبات الشكوى</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            padding: 0;
            margin: 0;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            color: #2c3e50;
        }

        .top-btn-container {
            text-align: end;
            margin: 20px 40px 0 0;
        }

            .top-btn-container a, .top-btn-container button {
                background-color: #8e44ad;
                color: white;
                padding: 10px 18px;
                text-decoration: none;
                border-radius: 8px;
                font-size: 1rem;
                margin-left: 10px;
                border: none;
                cursor: pointer;
            }

        .resignation-table {
            width: 95%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
        }

            .resignation-table th,
            .resignation-table td {
                padding: 12px;
                border: 1px solid #ddd;
                text-align: center;
            }

            .resignation-table th {
                background-color: #2c3e50;
                color: white;
            }

            .resignation-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .action-btn {
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-weight: bold;
        }

        .accept-btn {
            background-color: #27ae60;
            color: white;
        }

        .reject-btn {
            background-color: #c0392b;
            color: white;
        }

        .message-box {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #34d399;
            color: white;
            text-align: center;
            border-radius: 5px;
            transition: opacity 0.5s;
        }

        .btn-export {
            background-color: #28a745; /* لون أخضر */
            color: white;
            padding: 10px 18px; /* حشوة مناسبة للكلمة */
            text-decoration: none;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            margin-left: 10px;
        }

            .btn-export:hover {
                background-color: #218838; /* لون أغمق عند التمرير */
            }
    </style>
    <script>
        window.onload = function () {
            const messageBox = document.getElementById("message-box");
            if (messageBox) {
                setTimeout(() => {
                    messageBox.style.opacity = "0";
                    setTimeout(() => messageBox.remove(), 500);
                }, 5000);
            }
        }
    </script>
</head>
<body>
    @if (ViewBag.Message != null)
    {
        <div id="message-box" class="message-box">
            @ViewBag.Message
        </div>
    }
    <h2>ارشيف الشكوى</h2>

    <div class="top-btn-container">
        <a asp-action="GetAllComplaints" method="get" style="background-color: #3498db;">رجوع</a>
        <button class="btn btn-export" onclick="exportTableToExcel('ComplaintsTable', 'ComplaintsData')">تحميل كـ Excel</button>
    </div>

    <table id="ComplaintsTable" class="resignation-table">
        <thead>
            <tr>
                <th>اسم الموظف</th>
                <th>تاريخ الشكوى</th>
                <th>الحالة</th>
                <th>الشكوى</th>
                <th>الرد</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.Date</td>
                    <td>@item.status</td>
                    <td>@item.content</td>
                    <td>@item.response</td>
                </tr>
            }
        </tbody>
    </table>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        function exportTableToExcel(tableID, filename = '') {
            var table = document.getElementById(tableID);
            var workbook = XLSX.utils.table_to_book(table, { sheet: "Sheet1" });
            XLSX.writeFile(workbook, filename ? filename + '.xlsx' : 'table.xlsx');
        }
    </script>
</body>
</html>